<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="@dimen/MarginBase"
        android:src="@drawable/calculadora"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tamanioImagen"></ImageView>
    
    <LinearLayout
        android:layout_marginTop="@dimen/MarginBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/n1Label"
            android:gravity="center_horizontal"
            android:layout_weight="2"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/n1Txt"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/MarginBase2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/n2Label"
            android:gravity="center_horizontal"
            android:layout_weight="2"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/n2Txt"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/MarginBase3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="@string/sumarText"
            android:textSize="@dimen/tamanioLetra"
            android:background="@color/colorSuma"
            android:textColor="@color/primary_light"
            android:onClick="sumar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanioBtn"></Button>
        <Button
            android:text="@string/restarText"
            android:textSize="@dimen/tamanioLetra"
            android:background="@color/colorResta"
            android:textColor="@color/primary_light"
            android:onClick="restar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanioBtn"></Button>
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="@string/multiplicarText"
            android:textSize="@dimen/tamanioLetra"
            android:background="@color/colorMulti"
            android:textColor="@color/primary_light"
            android:onClick="multiplicar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanioBtn"></Button>
        <Button
            android:text="@string/dividirText"
            android:textSize="@dimen/tamanioLetra"
            android:textColor="@color/primary_light"
            android:background="@color/colorDiv"
            android:onClick="dividir"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanioBtn"></Button>
    </LinearLayout>

</LinearLayout>